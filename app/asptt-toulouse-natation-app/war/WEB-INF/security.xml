<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
	http://www.springframework.org/schema/security
	http://www.springframework.org/schema/security/spring-security-3.2.xsd">

    <http use-expressions="true" entry-point-ref="gaeEntryPoint">
        <intercept-url pattern="/" access="permitAll" />
        <intercept-url pattern="/**" access="hasRole('USER')" />
    </http>

    <beans:bean id="gaeEntryPoint" class="com.asptttoulousenatation.core.security.GoogleAccountsAuthenticationEntryPoint" />
    
<beans:bean id="gaeFilter" class="com.asptttoulousenatation.core.security.GaeAuthenticationFilter">
        <beans:property name="authenticationManager" ref="authenticationManager"/>
    </beans:bean>

    <authentication-manager alias="authenticationManager">
        <authentication-provider ref="gaeAuthenticationProvider"/>
    </authentication-manager>

    <beans:bean id="gaeAuthenticationProvider" class="com.asptttoulousenatation.core.security.GoogleAccountsAuthenticationProvider">
        <beans:property name="userRegistry" ref="userRegistry" />
    </beans:bean>

    <beans:bean id="userRegistry" class="com.asptttoulousenatation.core.security.GaeDatastoreUserRegistry" />
</beans:beans>