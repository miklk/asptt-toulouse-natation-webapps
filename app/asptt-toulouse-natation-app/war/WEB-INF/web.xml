<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">


  <filter>
		<filter-name>guiceFilter</filter-name>
		<filter-class>com.google.inject.servlet.GuiceFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>guiceFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	

  <listener>
  	<listener-class>com.asptttoulousenatation.core.server.config.CoreGuiceServletConfig</listener-class>
  </listener>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  
  <servlet>
    <display-name>Remote API Servlet</display-name>
    <servlet-name>RemoteApiServlet</servlet-name>
    <servlet-class>com.google.apphosting.utils.remoteapi.RemoteApiServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
</servlet>
<servlet-mapping>
    <servlet-name>RemoteApiServlet</servlet-name>
    <url-pattern>/remote_api</url-pattern>
</servlet-mapping>

<context-param>
    <!-- max size of the upload request -->
    <param-name>maxSize</param-name>
    <param-value>20000000</param-value>
  </context-param>
  <context-param>
    <!-- Useful in development mode to slow down the uploads in fast networks.
         Put the number of milliseconds to sleep in each block received in the server.
         false or 0, means don't use slow uploads  -->
    <param-name>slowUploads</param-name>
    <param-value>0</param-value>
  </context-param>


<servlet>
    <servlet-name>ckUploaderServlet</servlet-name>
    <!-- This is the default servlet, it puts files in session -->
    <servlet-class>com.asptttoulousenatation.core.server.CkUploadServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ckUploaderServlet</servlet-name>
    <url-pattern>/ckuploader</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>uploadServlet</servlet-name>
    <!-- This is the default servlet, it puts files in session -->
    <servlet-class>com.asptttoulousenatation.core.server.UploadServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>uploadServlet</servlet-name>
    <url-pattern>*.gupld</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>downloadServlet</servlet-name>
    <!-- This is the default servlet, it puts files in session -->
    <servlet-class>com.asptttoulousenatation.core.server.DownloadServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>downloadServlet</servlet-name>
    <url-pattern>/downloadDocument</url-pattern>
  </servlet-mapping>
  
<!--OnPositive Tools-->
<servlet>
		<servlet-name>baseViewerServlet</servlet-name>
		<servlet-class>com.onpositive.gae.tools.servlets.BaseViewerServlet
		</servlet-class>
	</servlet>
<servlet-mapping>
		<servlet-name>baseViewerServlet</servlet-name>
		<url-pattern>/appwrench/baseviewer</url-pattern>
	</servlet-mapping>
<servlet>
		<servlet-name>SessionAuth</servlet-name>
		<servlet-class>com.onpositive.auth.AuthServlet</servlet-class>
	</servlet>
<servlet-mapping>
		<servlet-name>SessionAuth</servlet-name>
		<url-pattern>/appwrench/auth</url-pattern>
	</servlet-mapping>
<servlet>
		<servlet-name>QueueHandler</servlet-name>
		<servlet-class>com.onpositive.gae.tools.servlets.QueueHandlerServlet
		</servlet-class>
	</servlet>
<servlet-mapping>
		<servlet-name>QueueHandler</servlet-name>
		<url-pattern>/appwrench/queuehandler</url-pattern>
	</servlet-mapping>

 <servlet>
        <servlet-name>CreneauList</servlet-name>
        <servlet-class>com.asptttoulousenatation.web.creneau.CreneauListAction</servlet-class>
 </servlet>
 <servlet>
        <servlet-name>Inscrits</servlet-name>
        <servlet-class>com.asptttoulousenatation.InscritsAction</servlet-class>
 </servlet>
 <servlet>
        <servlet-name>testEcole</servlet-name>
        <servlet-class>com.asptttoulousenatation.TestEcoleAction</servlet-class>
 </servlet>
 
 <servlet>
        <servlet-name>adherentList</servlet-name>
        <servlet-class>com.asptttoulousenatation.web.adherent.AdherentListAction</servlet-class>
 </servlet>
 <servlet-mapping>
  <servlet-name>CreneauList</servlet-name>
  <url-pattern>/CreneauList.do</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>Inscrits</servlet-name>
  <url-pattern>/v2/Inscrits.do</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>Inscrits</servlet-name>
  <url-pattern>/v2/Inscrits.do</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>testEcole</servlet-name>
  <url-pattern>/testEcole.do</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>adherentList</servlet-name>
  <url-pattern>/adherentList.do</url-pattern>
 </servlet-mapping>
 
<servlet>
        <servlet-name>Jersey Web Application</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>jersey.config.server.provider.packages</param-name>
            <param-value>com.asptttoulousenatation.core</param-value>
        </init-param>
        <init-param>
<param-name>jersey.config.server.provider.classnames</param-name>
<param-value>org.glassfish.jersey.media.multipart.MultiPartFeature</param-value>
</init-param>
         <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Jersey Web Application</servlet-name>
        <url-pattern>/resources/*</url-pattern>
    </servlet-mapping>
    
